show databses;
use practices;
show tables;

CREATE TABLE students (
  student_id INT PRIMARY KEY,
  first_name VARCHAR(50),
  last_name VARCHAR(50),
  email VARCHAR(100),
  phone_number VARCHAR(20),
  address TEXT,
  date_of_birth DATE,
  gender VARCHAR(10)
);


INSERT INTO students (student_id, first_name, last_name, email) 
VALUES 
(1, 'Chandra', 'Mouli', 'mouli.com'),
(2, 'Venkat', 'Prasad', 'chandra.com');

CREATE VIEW student_details_view AS
SELECT student_id, first_name, last_name, email, phone_number, address, date_of_birth, gender
FROM students;

SELECT * FROM student_details_view;
